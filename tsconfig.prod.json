{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": false, // disable source map for production
    "outDir": "./dist",
    "baseUrl": "./",
   "paths": {
     "src/*": ["src/*"]
   },
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["src/**/*", "src/index.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.dev.ts"]
}
